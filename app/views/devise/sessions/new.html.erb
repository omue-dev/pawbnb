<div class="auth-page">
  <!-- Hero section -->
  <section class="hero-section position-relative text-white">
    <div class="container position-relative py-5">
      <div class="row justify-content-between align-items-start">
        <!-- Left: Welcome text -->
        <div class="col-lg-6 mb-4">
          <h1 class="fw-bold mb-3">Welcome Dog Friend!</h1>
          <p class="fs-5 text-dark">
            Find trusted pet sitters and cozy stays for your furry friends.
          </p>
        </div>

        <!-- Right: Login card -->
        <div class="col-lg-5 position-relative">
          <div class="login-card card p-4 shadow-sm border-1 border-dark">
            <h3 class="fw-semibold mb-3">Login to your Account</h3>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.input :email, label: "Email Address", input_html: { placeholder: "your.email@example.com", class: "form-control" } %>
              <%= f.input :password, label: "Password", input_html: { class: "form-control" } %>
              <%= f.button :submit, "Login", class: "btn btn-dark w-100 mt-3" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Create account section -->
  <section class="create-account py-5 my-4">
    <div class="container">
      <div class="card border-1 shadow-sm p-4 border-light bg-light text-left">
        <h3 class="fw-semibold mb-2">Create Account</h3>
        <p class="text-muted small mb-4">Fill out this form</p>
        <%= render "devise/registrations/new" %>
      </div>
    </div>
  </section>
</div>
