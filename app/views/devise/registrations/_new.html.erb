<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="row g-3">
    <!-- First / Last Name -->
    <div class="col-md-6">
      <%= f.input :first_name, label: "First Name", input_html: { placeholder: "Enter your first name", class: "form-control" } %>
    </div>
    <div class="col-md-6">
      <%= f.input :last_name, label: "Last Name", input_html: { placeholder: "Enter your last name", class: "form-control" } %>
    </div>

    <!-- Email -->
    <div class="col-md-6">
      <%= f.input :email, label: "Email Address", input_html: { placeholder: "your.email@example.com", class: "form-control" } %>
    </div>

    <!-- Address -->
    <div class="col-md-6">
      <%= f.input :address, label: "Address", input_html: { placeholder: "Enter your address", class: "form-control" } %>
    </div>
  </div>

  <!-- Terms + Submit -->
  <div class="d-flex justify-content-between align-items-center mt-4 flex-wrap">
    <div class="form-check mb-3 mb-md-0">
      <input class="form-check-input" type="checkbox" id="terms" required>
      <label class="form-check-label small text-muted" for="terms">
        I agree to pawbnbâ€™s <a href="#" class="text-dark text-decoration-underline">Terms of Service</a> and
        <a href="#" class="text-dark text-decoration-underline">Privacy Policy</a>.
      </label>
    </div>

    <%= f.button :submit, "Create Account", class: "btn btn-dark px-5 py-2 fw-semibold" %>
  </div>
<% end %>
